{
  "compilerOptions": {
    "jsx": "react",
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "target": "es5",
    "module": "commonjs",
    "lib": ["esnext", "DOM"],
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    "typeRoots": ["node_modules/@types"]
  },

  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}